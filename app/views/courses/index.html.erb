
<div class="row-fluid">
	<div class="span1">
	</div>
	<div class="span10">
		<div class="row-fluid">
			<div class="span12" style="text-align: center; text-decoration: underline; font-size: 200%;">
				Slide 1
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12 slide-content" style="text-align: center;">
				<img src="http://upload.wikimedia.org/wikipedia/commons/1/16/Ruby_on_Rails-logo.png">
			</div>
		</div>
		<div class="row-fluid">
			<div class="span5"></div>
			<div class="span1" style="text-align: center;">
				<a href="#" class="slide-scroll" index="-1">
					<%= image_tag "glyphicons_224_chevron-left.png", alt: "<" %>
				</a> 
			</div>
			<div class="span1" style="text-align: center;">
				<a href="#" class="slide-scroll" index="1">
					<%= image_tag "glyphicons_223_chevron-right.png", alt: "<" %></a>
			</div>
			<div class="span5"></div>
		</div>
		
	</div>
	<div class="span1">
	</div>
</div>


<% @careers.each do |career| %>
<div class="row-fluid">
	<div class="span12" style="text-decoration: underline; font-weight: bold; font-size: 150%;">
		<%= career.career %>
	</div>
</div>
<div class="row-fluid" style="margin-bottom: 30px;">
		<% Course.careerCourseList(career.career).each do |course| %>
			<div class="span3">
				<a href="/courses/<%= course.id %>" class="btn btn-primary">
					<%= course.name %>
				</a>
			</div>
		<% end %>
</div>
<% end %>